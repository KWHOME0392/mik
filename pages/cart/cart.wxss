/* pages/cart/cart.wxss */
@import "/style/iconfont";
/* 购物车有商品的显示样式 */
.goods-cart{
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #eee;
  padding:20rpx 0;
}

/* 购物车没有商品的显示样式 */
.icon-cart::before{
  content: "\e63f";
  font-size:80rpx;
  color:white;
  position: absolute;
  left: 50%;
  margin-left: -40rpx;
  top: 50%;
  margin-top: -40rpx;

}
.iconfont{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: #ccc;
  position: relative;
}
.cart{
  display: flex;
  flex-direction: column;
  position: absolute;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #eee;
  align-items: center;
  padding:100rpx;
}

.txt{
  padding:50rpx;
}

.go-store{
  width: 70vw;
  background-color: #D83315;
  padding:20rpx;
  color:white;
  text-align: center;
  border-radius: 10rpx;
}