/* components/nav/index.wxss */
.nav-items{
  width:100%;
  height: 180rpx;
  background: #D83315;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.nav-item{
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100rpx;
  padding-top:20rpx;
  justify-content: center;
}
.nav-icon{
  width:100rpx;
  height: 100rpx;
  background: white;
  border-radius: 50%; 
  position: relative;
}
.nav-icon-text{
  position: absolute;
  color:#D83315;
  font-weight: 600;
  left: 50%;
  top:50%;
  text-shadow:5px 2px 6px #000;
  margin-left: -10px;
  margin-top:-12px;
}
.nav-text{
  font-size: 14px;
  color:aliceblue;
}
.nav-icon image{
  width: 100%;
  height: 100%;
}
.nav-icon.logo{
  background-color: #D83315;
}
